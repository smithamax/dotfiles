# Create a new directory and enter it
function md() {
	mkdir -p "$@" && cd "$@"
}

function mkproj() {
	mkdir $1 && cd $1 && git init
}

# find shorthand
function f() {
	find . -name "$1"
}

# Use Git’s colored diff when available
hash git &>/dev/null
if [ $? -eq 0 ]; then
	function diff() {
		git diff --no-index --color-words "$@"
	}
fi

